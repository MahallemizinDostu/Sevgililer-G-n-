<script>
/* ===== SAYA√á ===== */
const startDate=new Date("2025-08-14T00:00:00").getTime();

function updateCounter(){
    const now=Date.now();
    const distance=now-startDate;
    if(distance<0)return;

    const d=Math.floor(distance/86400000);
    const h=Math.floor((distance%86400000)/3600000);
    const m=Math.floor((distance%3600000)/60000);

    if(document.getElementById("days")){
        days.innerText=d;
        hours.innerText=h;
        minutes.innerText=m;
    }
}
setInterval(updateCounter,1000);

/* ===== OVERLAY ===== */
const overlay=document.getElementById("mainOverlay");
const audio=document.getElementById("player");
const musicBar=document.getElementById("musicNotification");

let emojiInterval=null;

function playMusic(){
    if(!audio.paused)return;
    audio.play().then(()=>{
        musicBar.classList.add("show");
        startEmojiRain();
    });
}

function startEmojiRain(){
    if(emojiInterval) return;
    const emojis=['‚ù§Ô∏è','üíñ','ü•∞','üå∏','‚ú®'];
    emojiInterval=setInterval(()=>{
        const el=document.createElement("div");
        el.innerText=emojis[Math.floor(Math.random()*emojis.length)];
        el.className="emoji-rain";
        el.style.left=Math.random()*100+"vw";
        el.style.animationDuration=(Math.random()*2+3)+"s";
        document.body.appendChild(el);
        setTimeout(()=>el.remove(),5000);
    },400);
}

/* ===== CANVAS ===== */
const canvas=document.getElementById("particle-canvas");
const ctx=canvas.getContext("2d");

function resize(){
    canvas.width=innerWidth;
    canvas.height=innerHeight;
}
resize();
addEventListener("resize",resize);

const particles=[];
for(let i=0;i<30;i++){
    particles.push({
        x:Math.random()*canvas.width,
        y:Math.random()*canvas.height,
        r:Math.random()*3+1,
        d:Math.random()*0.5+0.1
    });
}

function draw(){
    ctx.clearRect(0,0,canvas.width,canvas.height);
    ctx.fillStyle="rgba(255,71,87,0.3)";
    particles.forEach(p=>{
        ctx.beginPath();
        ctx.arc(p.x,p.y,p.r,0,Math.PI*2);
        ctx.fill();
        p.y-=p.d;
        if(p.y<0)p.y=canvas.height;
    });
    requestAnimationFrame(draw);
}
draw();
</script>

